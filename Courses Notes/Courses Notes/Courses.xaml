<Page x:Class="Courses_Notes.Courses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Courses_Notes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Courses">

    <Grid>
        <WrapPanel Name="MainPanel">
            <StackPanel Style="{StaticResource Course}">
                <Button x:Name="AddButton" MouseLeave="Add_MouseLeave" MouseEnter="Add_MouseEnter" Click="Add" Content="+" BorderThickness="0,0,0,0" FontSize="200" FontFamily="Bodoni MT Black" Background="{x:Null}" Foreground="#FF0C0C0C" Opacity="0.4">
                    
                </Button>
                <Label FontFamily="Comic Sans MS"></Label>
                
            </StackPanel>
            

        </WrapPanel>

    </Grid>
</Page>
